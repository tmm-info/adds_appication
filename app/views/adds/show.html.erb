<p>
  <strong>Title:</strong>
  <%= @add.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @add.body %>
</p>

<p>
  <strong>Img:</strong>
  <img src="<%= @add.img %>" class="img-fluid rounded-start" width="500px" height="500px">
<!--  commented img is too big-->
  <%#= image_tag(@add.img.url, alt: 'Image') if @add.img? %>
</p>

<p>
  <strong>User:</strong>
  <%= @add.user.username %>
</p>
<%= link_to 'Edit', edit_add_path(@add), class: 'btn btn-primary' %>
<%= link_to 'Back', adds_path, class: 'btn btn-primary' %>

<div class="card my-1">
  <div class="card-body">
    <p class="font-weight-bold">Comments</p>
    <%= form_with(model: [@add, @add.comments.build]) do |f| %>
      <div class="form-group">
        <%= f.label 'New comment' %>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<%= render @add.comments %>


